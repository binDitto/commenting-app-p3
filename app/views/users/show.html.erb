<div class="container">
  <div class="row">
    <div class="col-md-6">


      <%= link_to 'Users', users_path, class: "btn btn-success btn-lg" %>
      <% if @user.comments.any? %>
        <%= link_to 'User Comments', user_comments_path(@user), class: "btn btn-default" %>
      <% end %>
      <% if logged_in? && current_user.id == @user.id %>
        <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-default" %>
        <%= link_to 'Deactivate', user_path(@user), method: :delete, class: "btn btn-danger",
                                  data: { confirm: "Are you sure you want to deactivate your account?" } %>
      <% end %>
      <h2><%= @user.username %>'s profile</h2>

      <ul>
        <li>
          Email: <%= @user.email %>
          <small>Joined <%= time_ago_in_words(@user.created_at) %> ago</small>
        </li>
      </ul>
    </div>
  </div>
</div>
