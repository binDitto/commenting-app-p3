<div class="container">
  <div class="row">

    <%= form_for(@comment) do |c| %>
      <div class="form-group">
        <%= c.text_field :body, class: "form-control", placeholder: "Enter comment" %>
      </div>
        <%= c.submit "Post!", class: "btn btn-default" %>
    <% end %>


    <ul class="blo">
      <% @comments.each do |comment| %>
        <li class="block">
          <div class="blockit">

            <small class="label label-default"><%= comment.user.username %></small>
            <hr>
            <%= comment.body %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
