<div class="container">
  <div class="row">
    <div class="col-md-6">

      <%= form_for(:session) do |u| %>

        <div class="form-group">
          <%= u.label :username %>
          <%= u.text_field :username, class: "form-control", placeholder: "Enter a username" %>
        </div>

        <div class="form-group">
          <%= u.label :password %>
          <%= u.password_field :password, class: "form-control", placeholder: "Enter a password" %>
        </div>

          <%= u.submit "Log in!", class: "btn btn-lg btn-primary" %>

      <% end %>

    </div>
  </div>
</div>
