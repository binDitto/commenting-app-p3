.popup {
  display: none;
  position: absolute;
  z-index: 99 !important;
  background-color: rgba(8,67,94, .98);
  width: 100%;
  height: 100%;
  overflow: hidden;
  .popupform {
    padding: 100px;
  }
  .popup-control {
    border: 0;
    border-bottom: 5px solid #eaeaea;
    width: 700px;
    height: 150px;
    font-size: 50px;
    color: white;
    background: none;
    border-radius: 0;
    -wbkit-appearance: none;
    box-shadow: none;

  }
  .form-control::-webkit-input-placeholder {
    color: rgba(231, 246, 253, 0.3);
  }
  .form-control:-moz-placeholder { /* Firefox 18- */
    color: rgba(231, 246, 253, 0.3);
  }

  .form-control::-moz-placeholder { /* Firefox 19+ */
    color: rgba(231, 246, 253, 0.3);
  }

  .form-control:-ms-input-placeholder {
    color: rgba(231, 246, 253, 0.3);
  }

  .popup-control:focus {
    border-color: none;
    box-shadow: none;
    outline: none;
  }
  .close2 {
    display: block;
    margin: 50px;
    float: right;
    color: white;
    text-shadow: 1px 1px 5px black;
  }

  .popup-button{
    border-radius: 0;
    font-size: 50px;
    color: white;
    background: none !important;
    border-style:none;
    text-transform: uppercase;
  }

}

